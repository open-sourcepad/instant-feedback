.col-md-12.p-0.bg-lightbrown
  .row
    .col-md-9.m-auto
      .mt-5.mb-5
        ul.reset.user-overview-options
          li.is-active
            button.active From Your Team
          li.is-active
            button To Your Team

      .mt-3.feedback-list
        .feedback
          span.text-muted.font-size-12 Yesterday
          br
          span.font-bold.text-indigo Sam&nbsp;
          span said:
          p.text-justify "Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla partiur."
          .text-right
            button.btn-action.font-size-14.font-bold More


modal(
  [(visible)]="showModal",
  [(modalText)]="modalText",
  [(buttons)]="modalButtons",
  (modalStateChange)="modalStateChange($event)"
)

side-menu(
  [(menuState)]="sideMenuState",
  [feedbackState]="'give'",
  [(form)]="feedbackForm",
  (cancel)="toggleSideMenuState($event)",
  (submitFeedback)="submitFeedback($event)"
)
  form(feedback="give", [formGroup]="feedbackForm", novalidate, autocomplete="off", (ngSubmit)="submitFeedback(feedbackForm.value)")
    span.text-muted.font-size-13 26 mins ago
    .form-header-text Abby requested you to give feedback with this question:
    br
    h2.font-bold.text-brown What's one thing that I could do to be more effective?
    br
    br
    .form-group-box
      textarea.form-control.form-control-line([class.is-invalid]="submitted && f.comment.errors", type="text", formControlName="comment")
      label Your feedback
      .invalid-feedback
        span Please enter your feedback
