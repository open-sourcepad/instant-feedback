#dashboard
  .row
    .col-md-6
      .team-pulse
        h1.font-weight-bold.text-uppercase Team Pulse
        .team-pulse-filter
          ul
            li Today
            li Week
            li Month
            li Year
        .team-pulse-doughnut
          .team-pulse-doughnut-chart
            div([hidden]="!chart")
              canvas#canvas {{ chart }}
            
          .team-pulse-doughnut-description
            h4.font-weight-bold 26 out of 36 are feeling good today!
        .team-pulse-line
          .team-pulse-line-chart
            div([hidden]="!chart")
              canvas#canvas2 {{ chart }}
          
