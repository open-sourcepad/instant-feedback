#reschedule-modal(*ngIf="visible")
  form#reschedule-modal-content([formGroup]="meetingForm", (ngSubmit)="save(meetingForm.value)", autocomplete="off")
    #reschedule-modal-body.text-center
      .col-sm-12.heading
        span Reschedule 1-on-1 meeting to:

      .col-sm-12
        br
        .input-group(daterangepicker, [options]="options", (selected)="selectedDate($event, daterange)")
          input.form-control(type="text" name="dateRangeInput", formControlName="scheduled_at", [class.is-invalid]="meetingForm.invalid")
          .input-group-append.inline-block
            .input-group-text
              button.btn
                span.icon-holder.ti-calendar.text-brown
        br
        .input-group.time-picker
          ngb-timepicker(formControlName="time", [meridian]="true", [spinners]="false")
        .form-check.mt-3
          input.form-check-input(id="addToCalendar" type="checkbox", name="dateRangeInput", formControlName="add_to_calendar")
          label.form-check-label(for="addToCalendar", style="font-weight: 400;") Add to my calendar
        br

      .col-sm-12
        button.btn-instant-feedback.btn-instant-feedback-cancel((click)="close.emit()")
          span Cancel
        button.btn-instant-feedback.btn-instant-feedback-brown(type="submit")
          span Submit
