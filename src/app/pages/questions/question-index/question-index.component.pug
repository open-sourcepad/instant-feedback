.row
  .col-md-12
    h2.title Questions
  .col-md-12.text-right
    button.btn.btn-instant-feedback.btn-instant-feedback-primary([routerLink]="['/questions/add']")
      span.icon-holder.ti-plus
      span Add a Question
  .col-md-12
    table.table.table-instant-feedback
      thead
        tr
          th
            span Question
          th
            span Frequency
          th
            span Time
          th
            span
      tbody
        tr(*ngFor="let question of questions")
          td
            span {{ question.message }}
          td
            span {{ question.trigger_schedule }}
          td
            span
          td.actions
            ng-container(*ngIf="question.category == 'custom'")
              a([routerLink]="['/questions', question.id]")
                .icon-edit.icon-sm.icon-holder
              a
                .icon-remove.icon-sm.icon-holder